package programs;

public class FindPalindromeNumber {

	// find a palindrome numbers
	// 151 454 67876

	public static void isPalindromeNumber(int num) {
		int r = 0;
		int sum = 0;
		int t;
		t = num;

		while (num > 0) {
			r = num % 10;
			sum = (sum * 10) + r;
			num = num / 10;

		}

		if (t == sum) {
			System.out.println("palindrome Number");
		} else {
			System.out.println("is not a palindrome number");
		}
	}

	public static void main(String[] args) {
		isPalindromeNumber(67876);

	}

}
